2.23.

 /* Програрамма считывает пять целых чисел и вычисляет наибольшее и наименьшее */

#include <iostream>

using namespace std;

int main()
{
  setlocale(0, "");

  int x1;
  int x2;
  int x3;
  int x4;
  int x5;

  cin >> x1 >> x2 >> x3 >> x4 >> x5;

  if( x1 < x2 )
   if ( x1 < x3 )
    if ( x1 < x4 )
     if ( x1 < x5 )
      cout << "Наименьшее число " << x1 << endl;

  if( x2 < x1 )
   if ( x2 < x3 )
    if ( x2 < x4 )
     if ( x2 < x5 )
      cout << "Наименьшее число " << x2 << endl;

  if( x3 < x2 )
   if ( x3 < x1 )
    if ( x3 < x4 )
     if ( x3 < x5 )
      cout << "Наименьшее число " << x3 << endl;

  if( x4 < x2 )
   if ( x4 < x3 )
    if ( x4 < x1 )
     if ( x4 < x5 )
      cout << "Наименьшее число " << x4 << endl;


  if( x5 < x2 )
   if ( x5 < x3 )
    if ( x5 < x4 )
     if ( x5 < x1 )
      cout << "Наименьшее число " << x5 << endl;    
  

  if( x1 > x2 )
   if ( x1 > x3 )
    if ( x1 > x4 )
     if ( x1 > x5 )
      cout << "Набольшее число " << x1 << endl;

  if( x2 > x1 )
   if ( x2 > x3 )
    if ( x2 > x4 )
     if ( x2 > x5 )
      cout << "Наибольшее число " << x2 << endl;

  if( x3 > x2 )
   if ( x3 > x1 )
    if ( x3 > x4 )
     if ( x3 > x5 )
      cout << "Наибольшее число " << x3 << endl;

  if( x4 > x2 )
   if ( x4 > x3 )
    if ( x4 > x1 )
     if ( x4 > x5 )
      cout << "Наибольшее число " << x4 << endl;


  if( x5 > x2 )
   if ( x5 > x3 )
    if ( x5 > x4 )
     if ( x5 > x1 )
      cout << "Наибольшее число " << x5 << endl;    

    return 0;
}





