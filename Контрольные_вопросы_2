2.15.
a) x = 7 + 3 * 6 / 2 - 1
5 3 1 2 4

1 = 18
2 = 9
3 = 16
4 = 15
5 = 15

b) x = 2 % 2 + 2 * 2 - 2 / 2
6 1 4 2 5 3

1 = 0
2 = 4
3 = 1
4 = 4
5 = 3
6 = 3

c) x = ( 3 * 9 * ( 3 + ( 9 * 3 / ( 3 ) ) ) )
6 4 5 3 2 1

1 = 1
2 = 9
3 = 12
4 = 27
5 = 324
6 = 324

2.16.

#include <iostream>

using namespace std;

int main()
{
setlocale(0, "");

int x; 
int y; 

cout << "Введите два целых числа: ";
cin >> x >> y;
cout << "Сумма = " << x + y << endl;
cout << "Производное = " << x * y << endl;
cout << "Разность = " << x - y << endl;
cout << "Частное = " << x / y << endl;

return 0;
}

